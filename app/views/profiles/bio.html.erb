<div class="container">
  <h2>Edit </h2>

  <%= simple_form_for(@bio ) do |f| %>

    <div class="form-inputs">
            <%= f.input :bio,
                        required: true,
                        autofocus: true,
                        label: false,
                        placeholder: "Your bio",
                        input_html: { autocomplete: "bio" } %>

          </div>

    <div class="form-actions">
      <%= f.button :submit, "Update", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to "Back", :back %>
</div>
