
<div class="banner-profile">
  <div style="width: 100%; height: 200px;">
  <% if @user.photo.attached? %>
    <%= cl_image_tag @user.photo.key,
                                      height: 180,
                                      style: "background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4))" %>
  <% else %>
    <img src="https://source.unsplash.com/random?profile?food" style="height: 180px; width: 100%" class="card-img-top"/>
  <% end %>
  </div>
</div>
<div class="avatar-profile">
  <%= cl_image_tag @user.photo.key, width: 100, height: 100, crop: :thumb, gravity: :face, class: 'avatar-large' %>
</div>
