<main id="home-card">
  <% @events.each do |e| %>
    <%= link_to event_path(e) do %>
      <div class="container-fluid bg-trasparent my-4 p-3" style="position: relative;">
        <div class="row row-cols-1 row-cols-xs-2 row-cols-sm-2 row-cols-lg-4 g-3">
          <div class="col">
            <div class="card h-90 shadow-sm">
              <li>
                <%= cl_image_tag e.user.photo.key, class: 'card-img-top', height: 220, width: 150, crop: :thumb, style: 'object-fit: contain;' %>
                <div class="card-body">
                  <div class="clearfix mb-3">
                    <h5 class="card-title"><%= e.title %></h5>
                    <span class="float-start badge rounded-pill bg-primary"><%= e.experience %></span>
                    <span class="float-end price-hp">Remaining slots : <%= e.calcul_capacity_book %>/<%= e.capacity %></li></span>
                  </div>
                </div>
              </li>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</main>
